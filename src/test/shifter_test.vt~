`include "./helper/header.vt"
`include "../modules/shifter.v"

module shifter_test();
  reg clock;
  reg [15:0] a;
  reg [3:0] d;
  reg [1:0] op;
 
  wire [15:0] res;
  shifter shifter_(
     .a(a), .d(d), .op(op),
    .res(res)
  );
  
  initial begin
    a = 16'b0000000000000000;
    d = 4'b0000;
    op = 2'b00;
    # 100
    $display("TEST FINSHED in %m");
    $finish();
  end
  
  always begin
    #20
    op = 2'b00;
    a = 16'b0100100010001001;
    d = 4'b0110;

    #20
    op = 2'b01;

    #20
    op = 2'b10;

    #20
    op = 2'b11;
  end
endmodule
