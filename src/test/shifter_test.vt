`include "./helper/header.vt"
`include "../modules/shifter.v"

module shifter_test();
  reg clock;
  reg [15:0] a;
  reg [3:0] d;
  reg [3:0] op;
 
  wire [15:0] res;
  shifter shifter_(
     .a(a), .d(d), .op(op),
    .res(res)
  );
  
  initial begin
    a = 16'b0;
    d = 4'b0;
    op = 2'b0;
    # 100
    $display("TEST FINSHED in %m");
    $finish();
  end
  
  always begin
    #20
    op = 2'b1000;
    a = 16'b0100100010001001;
    d = 4'b0110;

    #20
    op = 4'b1001;

    #20
    op = 4'b1010;

    #20
    op = 4'b1011;
  end
endmodule
